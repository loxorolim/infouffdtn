<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uff.br.infouffdtn"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="17" />
    
    <!-- To communication with the DTN service we need the permission to do so -->
    <uses-permission android:name="de.tubs.ibr.dtn.permission.DTN_COMMUNICATION"/>

    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name="uff.br.infouffdtn.MainActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter >
        		<action android:name="de.tubs.ibr.dtn.intent.DTNAPP" />
       			<category android:name="android.intent.category.DEFAULT" />
    </intent-filter>
        </activity>
        <activity android:name=".DisplayActivity"></activity>
        <activity android:name=".ShowContentActivity"></activity>
        
        <service android:name="uff.br.infouffdtn.InfoService" />
        
	    <receiver
	        android:enabled="true"
	        android:name="uff.br.infouffdtn.InfoReceiver"
	        android:exported="true"
	        android:permission="de.tubs.ibr.dtn.permission.DTN_SERVER">
	        <!-- Add intent filter for notification of incoming bundles -->
	        <intent-filter>
	            <action android:name="de.tubs.ibr.dtn.intent.RECEIVE" />
	            <category android:name="uff.br.infouffdtn" />
	        </intent-filter>
	        <!-- Add intent filter for status reports generated by the DTN service -->
	        <intent-filter>
	            <action android:name="de.tubs.ibr.dtn.intent.STATUS_REPORT" />
	            <category android:name="uff.br.infouffdtn" />
	        </intent-filter>
	    </receiver>
    </application>

</manifest>